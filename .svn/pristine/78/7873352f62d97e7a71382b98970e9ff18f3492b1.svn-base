package Poglavlje07.Vjezbe;

/**
 *
 * @author Celestin
 */
public class V0703 {

    public static void main(String[] args) {
        int brojacRijeci;
        for (String arg : args) {
            brojacRijeci = 0;
            for (String retval : arg.split(" ")) {
                System.out.printf(retval + " ");
                brojacRijeci++;
            }
            System.out.printf("   ima %d rijeci\n ", brojacRijeci);
        }
    }
}
